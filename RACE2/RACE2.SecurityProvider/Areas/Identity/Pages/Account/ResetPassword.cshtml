@page
@model ResetPasswordModel

@{
    Layout = "";
}
<link href="~/css/application.css" rel="stylesheet" />
<script src="~/js/site.js"></script>

<partial name="_HeaderPartialWithBanner" />

<div class="govuk-width-container ">

    <partial name="_FeedbackPartial" />
   
    <main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">

        <div class="govuk-grid-row">

            <div class="govuk-grid-column-two-thirds">
                
                <form method="post">
                    <h1 class="govuk-heading-xl">Create a new password</h1>
                    @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                    @if (!ModelState.IsValid)
                    {
                        <div class="govuk-error-summary govuk-!-margin-top-8" data-module="govuk-error-summary">
                            <div role="alert">
                                <h2 class="govuk-error-summary__title govuk-error-message">
                                    There is a problem
                                    <div class="govuk-error-summary__body">
                                        <ul class="govuk-list govuk-error-summary__list">
                                            <li>
                                                <a href="#email-error">Check your email address</a>
                                            </li>
                                            <li>
                                                <a href="#password-error">Check new password</a>
                                            </li>
                                            <li>
                                                <a href="#confirm-password-error">Check confirm new password</a>
                                            </li>
                                        </ul>
                                    </div>
                            </div>
                        </div>
                    }
                    <input asp-for="Input.Code" type="hidden" />
                    
                    @if (ModelState.IsValid)
                    {
                        <div class="govuk-form-group">
                            <label class="govuk-label" for="govGateUsername">
                                Enter your current email
                            </label>
                            <a id="email-error" style="text-decoration:none;">
                                <input asp-for="Input.Email" class="govuk-input govuk-!-width-three-quarters" aria-required="true" aria-describedby="govGateUserId-hint" id="govGateUsername">
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="govuk-form-group govuk-form-group--error">
                            <label class="govuk-label" for="username-Id-2">
                                Enter your current email
                            </label>
                            <p id="national-insurance-number-error" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> Check your email address
                            </p>
                            <a id="email-error" style="text-decoration:none;">
                                <input asp-for="Input.Email" class="govuk-input govuk-!-width-three-quarters govuk-input--error" aria-required="true" aria-describedby="national-insurance-number-hint national-insurance-number-error" id="govGateUsername">
                            </a>
                        </div>
                    }
                    <br/><br/>
                    <p class="govuk-body govuk-!-margin-bottom-6">
                        Your password must be 8 or more characters. Use a mixture of letters, numbers and symbols.
                    </p>
                    @if (ModelState.IsValid)
                    {
                        <div class="gem-c-show-password" data-module="show-password" data-disable-form-submit-check="false" data-show-text="Show" data-hide-text="Hide" data-show-full-text="Show password" data-hide-full-text="Hide password" data-announce-show="Your password is shown" data-announce-hide="Your password is hidden" data-show-password-module-started="true">
                            <div class="govuk-form-group">
                                <label for="govGatePasswordNew" class="gem-c-label govuk-label">New Password</label>
                                <a id="password-error" style="text-decoration:none;">
                                    <div class="gem-c-show-password__input-wrapper">
                                        <input asp-for="Input.Password" id="govGatePasswordNew" autocomplete="off" class="gem-c-input govuk-input gem-c-input--with-password govuk-!-width-three-quarters" spellcheck="false" type="password" value="">
                                        <button id="passwordbtnnew" class="gem-c-show-password__toggle" aria-controls="govGatePasswordNew" type="button" aria-label="Show password" onclick="getButtonText('passwordbtnnew','govGatePasswordNew')">Show</button>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="govuk-form-group govuk-form-group--error">
                            <label for="govGatePasswordNew" class="gem-c-label govuk-label">New Password</label>
                            <p id="password-error" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> Check your password
                            </p>
                            <a id="password-error" style="text-decoration:none;">
                                <div class="gem-c-show-password__input-wrapper">
                                    <input autocomplete="off" asp-for="Input.Password" id="govGatePasswordNew" class="gem-c-input govuk-input gem-c-input--with-password govuk-input--error"
                                           spellcheck="false" type="password">
                                    <button id="passwordbtnnew" class="gem-c-show-password__toggle" aria-controls="govGatePasswordConfirm" type="button" aria-label="Show password" onclick="getButtonText('passwordbtnnew','govGatePasswordNew')">Show</button>
                                </div>
                            </a>
                        </div>
                    }
                    <br />
                    @if (ModelState.IsValid)
                    {
                        <div class="gem-c-show-password" data-module="show-password" data-disable-form-submit-check="false" data-show-text="Show" data-hide-text="Hide" data-show-full-text="Show password" data-hide-full-text="Hide password" data-announce-show="Your password is shown" data-announce-hide="Your password is hidden" data-show-password-module-started="true">
                            <div class="govuk-form-group">
                                <label for="govGatePasswordConfirm" class="gem-c-label govuk-label">Confirm new password</label>
                                <a id="confirm-password-error" style="text-decoration:none;">
                                    <div class="gem-c-show-password__input-wrapper">
                                        <input asp-for="Input.ConfirmPassword" id="govGatePasswordConfirm" autocomplete="off" class="gem-c-input govuk-input gem-c-input--with-password govuk-!-width-three-quarters" id="input-cfca9749" spellcheck="false" type="password" value="">
                                        <button id="passwordbtnconfirm" class="gem-c-show-password__toggle" aria-controls="input-cfca9749" type="button" aria-label="Show password" onclick="getButtonText('passwordbtnconfirm','govGatePasswordConfirm')">Show</button>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="govuk-form-group govuk-form-group--error">
                            <label for="govGatePasswordConfirm" class="gem-c-label govuk-label">Confirm new password</label>
                            <p id="confirm-password-error" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> Check your password
                            </p>
                            <a id="confirm-password-error" style="text-decoration:none;">
                                <div class="gem-c-show-password__input-wrapper">
                                    <input autocomplete="off" asp-for="Input.ConfirmPassword" id="govGatePasswordConfirm" class="gem-c-input govuk-input gem-c-input--with-password govuk-input--error"
                                           spellcheck="false" type="password">
                                    <button id="passwordbtnconfirm" class="gem-c-show-password__toggle" aria-controls="govGatePasswordConfirm" type="button" aria-label="Show password" onclick="getButtonText('passwordbtnconfirm','govGatePasswordConfirm')">Show</button>
                                </div>
                            </a>
                        </div>
                    }
                    <br />
                    <button type="submit" ole="button" draggable="false" class="govuk-button govuk-!-margin-top-4 govuk-!-margin-bottom-8" data-module="govuk-button">
                        Change password
                    </button>
                </form>
            </div>
        </div>
    </main>
</div>

<partial name="_FooterPartial" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
