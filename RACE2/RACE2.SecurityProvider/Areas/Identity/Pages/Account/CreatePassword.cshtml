@page
@model CreatePasswordModel

@{
    Layout = "_LayoutRace2App";
}

<partial name="_HeaderPartialWithBanner" />

<div class="govuk-width-container" id="page-container">

    <partial name="_FeedbackPartial" />

    <a class="govuk-back-link" href="javascript:history.back()">Back</a>

    <main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">

        <div class="govuk-grid-row" id="content-wrap">

            <div class="govuk-grid-column-two-thirds">
                
                <form method="post">
                    <input type="hidden" asp-for="Input.Email"/>
                    @if (!ModelState.IsValid)
                    {
                        <div class="govuk-error-summary govuk-!-margin-top-8" data-module="govuk-error-summary">
                            <div role="alert">
                                <h2 class="govuk-error-summary__title govuk-error-message" style="color:black">
                                    There is a problem
                                </h2>
                                <div class="govuk-error-summary__body">
                                    <ul class="govuk-list govuk-error-summary__list">
                                        <li>
                                            <a href="#password-error">Check your password</a>
                                        </li>
                                        <li>
                                            <a href="#confirm-password-error">Check your confirm password</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                    <h1 class="govuk-heading-xl">Create a password</h1>                     
                    <p>
                        Your password must be 8 or more characters. Use a mixture of letters, numbers and symbols.
                    </p>
                    @if (ModelState.IsValid)
                    {
                        <div class="gem-c-show-password" data-module="show-password" data-disable-form-submit-check="false" data-show-text="Show" data-hide-text="Hide" data-show-full-text="Show password" data-hide-full-text="Hide password" data-announce-show="Your password is shown" data-announce-hide="Your password is hidden" data-show-password-module-started="true">
                            <div class="govuk-form-group">
                                <label for="govGatePasswordConfirm" class="gem-c-label govuk-label">Create a password</label>
                                <a id="password-error" style="text-decoration:none;">
                                    <div class="gem-c-show-password__input-wrapper">
                                        <input asp-for="Input.Password" id="govGatePassword" autocomplete="off" class="gem-c-input govuk-input gem-c-input--with-password govuk-!-width-three-quarters" id="input-cfca9749" spellcheck="false" type="password" value="">
                                        <button id="passwordbtn" class="gem-c-show-password__toggle" aria-controls="govGatePassword" type="button" aria-label="Show password" onclick="getButtonText('passwordbtn','govGatePassword')">Show</button>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="govuk-form-group govuk-form-group--error">
                            <label for="govGatePasswordConfirm" class="gem-c-label govuk-label">Create a password</label>
                            <p id="password-error" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> Check your password
                            </p>
                            <a id="password-error" style="text-decoration:none;">
                                <div class="gem-c-show-password__input-wrapper">
                                    <input autocomplete="off" asp-for="Input.Password" id="govGatePassword" class="gem-c-input govuk-input gem-c-input--with-password govuk-input--error" 
                                           spellcheck="false" type="password">
                                    <button id="passwordbtn" class="gem-c-show-password__toggle" aria-controls="govGatePassword" type="button" aria-label="Show password" onclick="getButtonText('passwordbtn','govGatePassword')">Show</button>
                                </div>
                            </a>
                        </div>
                    }
                    <br />
                    @if (ModelState.IsValid)
                    {
                        <div class="gem-c-show-password" data-module="show-password" data-disable-form-submit-check="false" data-show-text="Show" data-hide-text="Hide" data-show-full-text="Show password" data-hide-full-text="Hide password" data-announce-show="Your password is shown" data-announce-hide="Your password is hidden" data-show-password-module-started="true">
                            <div class="govuk-form-group">
                                <label for="govGatePasswordConfirm" class="gem-c-label govuk-label">Confirm your password</label>
                                <a id="confirm-password-error" style="text-decoration:none;">
                                    <div class="gem-c-show-password__input-wrapper">
                                        <input asp-for="Input.ConfirmPassword" id="govGatePasswordConfirm" autocomplete="off" class="gem-c-input govuk-input gem-c-input--with-password govuk-!-width-three-quarters" spellcheck="false" type="password" value="">
                                        <button id="passwordbtnconfirm" class="gem-c-show-password__toggle" aria-controls="govGatePasswordConfirm" type="button" aria-label="Show password" onclick="getButtonText('passwordbtnconfirm','govGatePasswordConfirm')">Show</button>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="govuk-form-group govuk-form-group--error">
                            <label for="govGatePasswordConfirm" class="gem-c-label govuk-label">Confirm your password</label>
                            <p id="confirm-password-error" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> Check your confirm password
                            </p>
                            <a id="confirm-password-error" style="text-decoration:none;">
                                <div class="gem-c-show-password__input-wrapper">
                                    <input autocomplete="off" asp-for="Input.ConfirmPassword" id="govGatePasswordConfirm" class="gem-c-input govuk-input gem-c-input--with-password govuk-input--error" 
                                           spellcheck="false" type="password">
                                    <button id="passwordbtnconfirm" class="gem-c-show-password__toggle" aria-controls="govGatePasswordConfirm" type="button" aria-label="Show password" onclick="getButtonText('passwordbtnconfirm','govGatePasswordConfirm')">Show</button>
                                </div>
                            </a>
                        </div>
                    }
                    <br />
                    <button type="submit" ole="button" draggable="false" class="govuk-button govuk-!-margin-top-4 govuk-!-margin-bottom-8" data-module="govuk-button">
                        Continue
                    </button>
                </form>
            </div>
        </div>
    </main>
</div>

<partial name="_FooterPartialFixed" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
