@page "/s12-statement-draft-or-submit"
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@using Microsoft.AspNetCore.Authorization;
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<div class="govuk-width-container ">

    <a class="govuk-back-link" href="javascript:history.back()">Back</a>

    <main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                   <div class="govuk-form-group">

                        <fieldset class="govuk-fieldset">

                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl">

                                <h1 class="govuk-fieldset__heading">
                                    Do you want to send a draft to the operator or submit your statement?
                                </h1>

                            </legend>

                            <div class="govuk-radios govuk-radios govuk-!-margin-top-2" data-module="govuk-radios">
                                <EditForm Model="@draftsubmit" OnSubmit="GoToNextPage">
                                    <InputRadioGroup Name="submitdraft" @bind-Value="draftsubmit.DraftSubmitOptions">
                                        @foreach (Enum value in Enum.GetValues(typeof(DraftSubmitClass.DraftSubmitEnum)))
                                        {                                            
                                            <div class="govuk-radios__item">
                                                <InputRadio Value="@value" class="govuk-radios__input" />
                                            <span class="govuk-label govuk-radios__label">@value.GetDisplayName()</span>
                                            </div>
                                         }
                                        <div>
                                            <button class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8" type="submit"
                                                    data-module="govuk-button">
                                                Continue
                                            </button>
                                        <button class="govuk-button govuk-button--secondary govuk-!-margin-top-2 govuk-!-margin-bottom-9"
                                                    data-module="govuk-button" @onclick="BeginSignOut">
                                                Save and come back later
                                            </button>
                                        </div>
                                    </InputRadioGroup>
                                </EditForm>                                
                            </div>
                        </fieldset>
                    </div>
            </div>
        </div>
    </main>
</div>


