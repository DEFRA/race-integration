@page "/add-operator"
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@using Microsoft.AspNetCore.Authorization;
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<div class="govuk-width-container ">

    <a class="govuk-back-link" href="javascript:history.back()">Back</a>

    <main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-xl">Add the details of another operator</h1>

                <EditForm Model="@NewOperatorDetail" OnSubmit="@GoToNextPage">

                    <div class="govuk-form-group">

                        <label class="govuk-label govuk-label--m" for="operator-new-name">
                            Name
                        </label>
                        <InputText class="govuk-input" @bind-Value="NewOperatorDetail.Name"
                                   style="border: 2px solid #000000;border-radius:unset;font-size: 18px;">
                        </InputText>
                    </div>

                    <div class="govuk-form-group">

                        <label class="govuk-label govuk-label--m" for="operator-new-address">
                            Address
                        </label>
                        <InputText class="govuk-input" @bind-Value="NewOperatorDetail.AddressLine1"
                                   style="border: 2px solid #000000;border-radius:unset;font-size: 18px;">
                        </InputText>
                        <InputText class="govuk-input govuk-!-margin-top-4" @bind-Value="NewOperatorDetail.Town"
                                   style="border: 2px solid #000000;border-radius:unset;font-size: 18px;">
                        </InputText>
                        <InputText class="govuk-input govuk-!-width-one-quarter govuk-!-margin-top-4" @bind-Value="NewOperatorDetail.Postcode"
                                   style="border: 2px solid #000000;border-radius:unset;font-size: 18px;">
                        </InputText>
                    </div>

                    <div class="govuk-form-group">

                        <label class="govuk-label govuk-label--m" for="operator-new-email">
                            Email address
                        </label>
                        <InputText class="govuk-input govuk-!-width-two-thirds" @bind-Value="NewOperatorDetail.Email"
                                   style="border: 2px solid #000000;border-radius:unset;font-size: 18px;">
                        </InputText>
                    </div>

                    <div class="govuk-form-group">

                        <label class="govuk-label govuk-label--m" for="operator-new-phone">
                            Phone number
                        </label>
                        <InputText class="govuk-input govuk-!-width-one-third" @bind-Value="NewOperatorDetail.Phone"
                                   style="border: 2px solid #000000;border-radius:unset;font-size: 18px;">
                        </InputText>
                    </div>

                    <div style="padding-top:10px;">
                        <button class="govuk-button govuk-!-margin-top-6 govuk-!-margin-bottom-6 govuk-!-margin-right-4" @onclick=@(args => GoToNextPage())>
                            Continue
                        </button>
                        <button class="govuk-button govuk-button--secondary govuk-!-margin-top-6 govuk-!-margin-bottom-9"
                                data-module="govuk-button" @onclick=@(args => GoToSaveComebackLaterPage())>
                            Save and come back later
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </main>
</div>
