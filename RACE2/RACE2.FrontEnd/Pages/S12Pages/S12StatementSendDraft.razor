@page "/s12-statement-send-draft"
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@using Microsoft.AspNetCore.Authorization;
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<div class="govuk-width-container ">

    <a class="govuk-back-link" href="javascript:history.back()">Back</a>

    <main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">

                <h1 class="govuk-heading-xl">Which email address you want to send the draft to?</h1>

                <EditForm Model="@draftModel" OnSubmit="@GoToNextPage">

                    <div class="govuk-form-group">

                        <label class="govuk-label govuk-label--m" for="operator-new-email">
                            Email address
                        </label>
                        <InputText class="govuk-input" @bind-Value="draftModel.Email"
                                   style="border: 2px solid #000000;border-radius:unset;font-size: 18px;">
                        </InputText>
                    </div>

                    <div>
                        <button class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8" type="submit">
                            Continue
                        </button>
                        <button type="submit"
                                class="govuk-button govuk-button--secondary govuk-!-margin-top-2 govuk-!-margin-bottom-9"
                                data-module="govuk-button">
                            Save and come back later
                        </button>
                    </div>

                </EditForm>

            </div>
        </div>
    </main>
</div>

