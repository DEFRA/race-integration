@page "/account-confirmation"
<div class="govuk-width-container ">        
  
  <a class="govuk-back-link" @onclick="goback">Back</a>

  <main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">          

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

           <EditForm Model=AppStore.CurrentUserDetail>

                <div class="govuk-panel govuk-panel--confirmation">
                    <h1 class="govuk-panel__title">
                        Your account has been set up
                    </h1>
                </div>

                <!-- <h2 class="govuk-heading-m govuk-!-padding-top-6">What happens next</h2>

                <p class="govuk-body">The Reservoir Safety team at the Environment Agency might contact you for more
                    information.
                </p> -->

                <p class="govuk-body">You can <a class="govuk-link govuk-link--no-visited-state"
                        @onclick="changepassword" >manage your account</a> or continue to start the service. 
                </p>

                <button class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8" @onclick=@(args => GoToNextPage())
                        data-module="govuk-button">
                    Continue
                </button>

            </EditForm>
        </div>
    </div>

   </main>
</div>
