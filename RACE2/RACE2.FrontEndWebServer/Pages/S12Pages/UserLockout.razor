@page "/user-lockout"
@using Microsoft.AspNetCore.Authorization;
@using RACE2.FrontEndWebServer.Components

<HeaderWithBanner />

<div class="govuk-width-container" style="min-height: 70vh;">

    <FeedbackBanner />
    <main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <div class="govuk-panel govuk-panel--confirmation govuk-!-margin-top-9" style="background-color:#F3F2F1;">
                    <h1 class="govuk-panel__title" style="color:#0b0c0c;">
                        Service locked
                    </h1>
                </div>
                <br />
                <p class="govuk-body">You cannot log into the service because you have entered incorrect login details over 5 times.</p>
                <p class="govuk-body">To get help, contact the Environment Agency.</p>
                <p class="govuk-body">Email <a href="#">s12statement@environment-agency.gov.uk</a></p>
                <p class="govuk-body">
                    Staff monitor emails from 9am to 5pm, Monday to Friday.
                </p>
            </div>
        </div>
    </main>
</div>

<Footer />